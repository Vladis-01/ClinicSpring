<body style="background-image: url('/static/img/background.jpg');">
<nav class="navbar navbar-expand-lg navbar-light bg-primary">
    <a class="navbar-brand" href="/patient/">
        <img alt="Brand" class="img-responsive" src="/static/img/logo.png">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/patient/doctors">Doctors</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/patient/editPatient">Edit account</a>
            </li>

        </ul>
        <span class="navbar-text">
            <form action="/logout" method="post">
                <div><button type="submit" class="btn-primary">Sign Out</button></div>
                <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
            </form>
    </span>
    </div>
</nav>
<h1 class="h45">Your data</h1>

<table class="table">
    <tr>
        <th>username</th>
        <th>fullName</th>
    </tr>

    {{#patient}}
        <tr>
            <td>{{username}}</td>
            <td>{{fullName}}</td>
        </tr>
    {{/patient}}
</table>

<h3 class="h41">Your appoiments</h3>

<table class="table">
    <tr>
        <th>date</th>
        <th>price</th>
        <th>status</th>
        <th>description</th>
        <th>doctor name</th>
    </tr>

    {{#appoiments}}
        <tr>
            <td>{{dateAppointment}}</td>
            <td>{{price}}</td>
            <td>{{status}}</td>
            <td>{{description}}</td>
            <td>{{doctorDto.fullName}}</td>
        </tr>
    {{/appoiments}}
</table>

</body>
</html>