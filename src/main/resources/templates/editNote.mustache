<h1 class="h43">Edit note</h1>

<div class="center">
    <form action="/doctor/folders/editNote" method="post">
        <div><input type="text" name="name" value={{note.name}} minlength="1" required placeholder="Note name" class="bigInput"/></div>
        Patient<br>
        <label>
            <select name="patient" class="select">
                <option name="patient" value="{{note.patientDto.id}}">{{note.patientDto.id}}, {{note.patientDto.fullName}}, {{note.patientDto.username}}</option>
            </select>
        </label><br>
        <div><textarea name="text" minlength="1" required class="textarea">{{note.text}}</textarea></div>
        <input type="hidden" name="folder" value="{{folder.id}}" />
        <input type="hidden" value="{{note.id}}" name="id">

        <div><input type="submit" value="Save" class="btn btn-primary bigBtn"/></div>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
    </form>

    <form action="/doctor/folders" method="get">
        <div><input type="submit" value="Back" class="btn btn-primary bigBtn"/></div>
    </form>

</div>

