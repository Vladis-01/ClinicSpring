<h1 class="h42">Create doctor</h1>

<div class="center">
    <form action="/doctor/doctors/createDoctor" method="post">
        <div><input type="text" name="username" placeholder="User name" class="bigInput"/></div>
        <div><input type="password" name="password" minlength="5" required placeholder="Password" class="bigInput"/></div>
        <div><input type="text" name="fullName" minlength="5" required placeholder="Full name" class="bigInput"/></div>

        Positions<br>
        <div class="form-check form-switch checkbox">
        {{#positions}}
            <input name="{{.}}" type="checkbox" class="form-check-input" id="flexSwitchCheckDefault">{{.}}<br>
        {{/positions}}
        </div>

        Roles<br>
        <div class="form-check form-switch">
        {{#roles}}
            <input name="{{.}}" type="checkbox" class="form-check-input checkbox" id="flexSwitchCheckDefault">{{.}}<br>
        {{/roles}}
        </div>

        <button type="submit" class="btn btn-primary bigBtn">Registration</button>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
    </form>

</div>
