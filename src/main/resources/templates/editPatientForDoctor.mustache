<h1 class="h43">Edit patient</h1>

<div class="center">
    <form action="/doctor/patients" method="post">
        {{#patient}}
            <div><input type="text" name="username" value="{{username}}" minlength="2" required placeholder="Username" class="bigInput"/></div>
            <div><input type="text" name="fullName" value="{{fullName}}" minlength="5" required placeholder="Full name" class="bigInput"/></div>
            <input type="hidden" value="{{id}}" name="id">
        {{/patient}}

        <button type="submit" class="btn btn-primary btnEdit">Save</button>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
    </form>
</div>


<table class="table">
    <tr>
        <th>dateAppointment</th>
        <th>price</th>
        <th>status</th>
        <th>patient</th>
        <th>doctor</th>
    </tr>

    {{#appoiments}}
        <tr>
            <td>{{dateAppointment}}</td>
            <td>{{price}}</td>
            <td>
                {{#status}}
                    '{{.}}'
                {{/status}}
            </td>
            <td>{{patientDto}}</td>
            <td>{{doctorDto}}</td>
            <td>
                <form action="/doctor/appoiments/{{id}}" method="get">
                    <div><input type="submit" value="Edit" class="btn btn-primary"/></div>
                </form>
            </td>
            <td>
                <form action="/doctor/appoiments/{{id}}" method="post">
                    <div><input type="submit" value="Delete" class="btn btn-primary"/></div>
                    <input type="hidden" name="_method" value="delete" wfd_invisible="true">
                    <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
                </form>
            </td>
        </tr>
    {{/appoiments}}
</table>

