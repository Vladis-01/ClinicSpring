<h1 class="h42">Edit doctor</h1>

<form action="/doctor/doctors" method="post" class="center">
    {{#doctor}}
    <div><input type="text" name="username" value="{{username}}" minlength="2" required placeholder="User name" class="bigInput"/></div>
    <div><input type="text" name="fullName" value="{{fullName}}" minlength="5" required placeholder="Full name" class="bigInput"/></div>
    <div><input type="password" name="newPassword" value="" minlength="5" placeholder="New password" class="bigInput"/></div>
    <input type="hidden" value="{{id}}" name="id">
    {{/doctor}}

    Positions<br>
    <div class="form-check form-switch checkbox">
        {{#positions}}
            {{#entrySet}}
                <input name="{{key}}" type="checkbox" class="form-check-input checkbox" id="flexSwitchCheckDefault" {{#value}}checked{{/value}}>{{key}}<br>
            {{/entrySet}}
        {{/positions}}
    </div>

    Roles<br>
    <div class="form-check form-switch checkbox">
        {{#roles}}
            {{#entrySet}}
                <input name="{{key}}" type="checkbox" class="form-check-input checkbox" id="flexSwitchCheckDefault" {{#value}}checked{{/value}}>{{key}}<br>
            {{/entrySet}}
        {{/roles}}
    </div>

    <div><input type="submit" value="Save" class="btn btn-primary bigBtn"/></div>
    <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
</form>

